<%
  function nl2br(string) {
    return string.replace(/\n/g, '<br />');
  }
%>

<p>Be sure to check back often as we continue to receive RSVP's.</p>

<% rsvps.forEach(function(rsvp) { %>
<dl>
  <dt><%= rsvp.name %></dt>
  <dd>
    <%- (rsvp.how_i_know_them) ? nl2br( sanitize(rsvp.how_i_know_them).xss() ) : 'no entry' %>
  </dd>
</dl>
<% }) %>
